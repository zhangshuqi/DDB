<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:id="@+id/gomeasure_ll"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

<!--进图测量界面布局-->
    <RelativeLayout
        android:background="@drawable/gray"
        android:layout_width="match_parent"
        android:layout_height="70dp">

        <ImageView
            android:layout_marginTop="30dp"
            android:layout_marginLeft="10dp"
            android:id="@+id/newrooms_backs_iv"
            android:src="@drawable/brck"
            android:layout_width="27dp"
            android:layout_height="27dp" />

        <TextView
            android:layout_marginTop="30dp"
            android:text="量尺列表"
            android:textSize="18dp"
            android:layout_toRightOf="@id/newrooms_backs_iv"
            android:gravity="center_vertical"
            android:textColor="@color/gray_white"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <TextView
            android:id="@+id/newroom_name_tv"
            android:layout_marginTop="30dp"
            android:text="客户姓名"
            android:textColor="@color/white"
            android:textSize="20dp"
            android:layout_centerHorizontal="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

    </RelativeLayout>

    <LinearLayout
        android:orientation="vertical"
        android:layout_weight="1"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

    <LinearLayout
        android:layout_weight="1"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
    <ListView
        android:id="@+id/gomeasure_lv"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
    </ListView>

    </LinearLayout>
        <View style="@style/view_line" />
    </LinearLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="60dp">

        <ImageView
            android:id="@+id/newroom_upload_lv"
            android:layout_margin="8dp"
            android:src="@drawable/uploading"
            android:layout_centerVertical="true"
            android:layout_alignParentRight="true"
            android:layout_width="55dp"
            android:layout_height="55dp" />

        <LinearLayout
            android:layout_margin="8dp"
            android:layout_toLeftOf="@id/newroom_upload_lv"
            android:id="@+id/gomesaure_create_ll"
            android:orientation="horizontal"
            android:gravity="center"
            android:background="@drawable/button_black_shape"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ImageView
                android:layout_marginRight="10dp"
                android:src="@drawable/room"
                android:layout_width="25dp"
                android:layout_height="25dp" />

            <TextView
                android:layout_marginLeft="10dp"
                android:text="新建房间"
                android:textSize="18dp"
                android:textColor="@color/gray_white"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

        </LinearLayout>
    </RelativeLayout>

</LinearLayout>