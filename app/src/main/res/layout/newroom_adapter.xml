<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_marginTop="50dp"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:background="@drawable/rectangles"
            android:padding="7dp"
            android:layout_centerVertical="true"
            android:id="@+id/newroom_head_iv"
            android:src="@drawable/kitchen"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:layout_width="35dp"
            android:layout_height="35dp" />

        <TextView
            android:id="@+id/newroom_kitchen_tv"
            android:text="房间类型"
            android:textSize="16dp"
            android:layout_toRightOf="@id/newroom_head_iv"
            android:textStyle="bold"
            android:paddingTop="9dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <TextView
            android:id="@+id/newroom_state_tv"
            android:text="2/4"
            android:textSize="10dp"
            android:layout_toRightOf="@id/newroom_head_iv"
            android:layout_below="@id/newroom_kitchen_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <TextView
            android:id="@+id/newroom_imag_tv"
            android:text="照片"
            android:textSize="10dp"
            android:layout_toRightOf="@id/newroom_state_tv"
            android:layout_below="@id/newroom_kitchen_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <ImageView
            android:id="@+id/temporary_iv"
            android:padding="7dp"
            android:layout_marginLeft="180dp"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:src="@drawable/arrow_right_redirect"
            android:layout_width="40dp"
            android:layout_height="50dp" />

    </RelativeLayout>

</LinearLayout>