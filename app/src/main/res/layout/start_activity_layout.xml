<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

    <TextView
        android:id="@+id/start_casual_tv"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="65dp"
        android:text="随便看看"
        android:textSize="16dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <TextView
        android:paddingTop="60dp"
        android:text="登录"
        android:textSize="25dp"
        android:textColor="@color/black"
        android:gravity="center_horizontal"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:id="@+id/imageView" />

    </RelativeLayout>

    <EditText
        android:id="@+id/start_number_et"
        android:hint="账号"
        android:background="@null"
        android:singleLine="true"
        android:textCursorDrawable="@null"
        android:layout_marginTop="50dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <View style="@style/view_short_line"/>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <EditText
            android:id="@+id/start_password_et"
            android:hint="密码"
            android:inputType="textPassword"
            android:password="true"
            android:singleLine="true"
            android:background="@null"
            android:textCursorDrawable="@null"
            android:layout_marginTop="35dp"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:layout_width="300dp"
            android:layout_height="wrap_content" />

        <ImageView
            android:id="@+id/start_showpassword_iv"
            android:src="@drawable/conceal"
            android:layout_alignParentRight="true"
            android:layout_marginTop="35dp"
            android:layout_marginRight="20dp"
            android:textSize="18dp"
            android:layout_width="25dp"
            android:layout_height="25dp" />

    </RelativeLayout>
    <View style="@style/view_short_line"/>

    <RelativeLayout
        android:id="@+id/start_sign_ll"
        android:layout_marginTop="50dp"
        android:background="@drawable/rectanglelogin"
        android:gravity="center"
        android:layout_marginRight="30dp"
        android:layout_marginLeft="30dp"
        android:layout_width="match_parent"
        android:layout_height="50dp">

        <TextView
            android:id="@+id/start_login_tv"
            android:text="登陆"
            android:textSize="20dp"
            android:gravity="center"
            android:layout_width="wrap_content"
            android:layout_height="match_parent" />

    </RelativeLayout>

    <RelativeLayout
        android:layout_marginTop="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

    <LinearLayout
        android:id="@+id/rememberpassword_ll"
        android:layout_marginLeft="30dp"
        android:gravity="center_vertical"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <TextView
            android:text="记住密码"
            android:textSize="15dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <RelativeLayout
            android:layout_marginLeft="10dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

        <ImageView
            android:src="@drawable/rectangle"
            android:layout_width="20dp"
            android:layout_height="20dp" />

            <ImageView
                android:id="@+id/start_show_iv"
                android:src="@drawable/group"
                android:visibility="gone"
                android:layout_width="20dp"
                android:layout_height="20dp" />

        </RelativeLayout>

    </LinearLayout>

        <LinearLayout
            android:id="@+id/forgetpassword_ll"
            android:layout_marginRight="30dp"
            android:layout_alignParentRight="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/start_forgetpassword_tv"
                android:layout_toRightOf="@id/rememberpassword_ll"
                android:text="忘记密码?"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        </LinearLayout>

    </RelativeLayout>
</LinearLayout>